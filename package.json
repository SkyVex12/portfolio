{
  "name": "goran-portfolio",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently -n WEB,API -c auto \"npm:dev:web\" \"npm:dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/resume-api && uvicorn server:app --host 0.0.0.0 --port 8000",
    "build": "cd apps/web && npm run build",
    "start": "cd apps/web && npm run start"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}